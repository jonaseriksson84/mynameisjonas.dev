---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<BaseLayout title={`${entry.data.title} â€” Jonas Eriksson`}>
  <article class="animate-fade-in-up delay-0">
    <a href="/blog" class="text-sm text-accent hover:text-accent-hover transition-colors">&larr; Back to blog</a>

    <header class="mt-6 mb-8">
      <h1 class="text-3xl font-bold text-text-light dark:text-text-dark">
        {entry.data.title}
      </h1>
      <time class="block mt-2 text-sm text-text-muted-light dark:text-text-muted-dark" datetime={entry.data.date.toISOString()}>
        {entry.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
      {entry.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-1.5 mt-3">
          {entry.data.tags.map((tag) => (
            <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-bg-light dark:bg-bg-dark border border-text-muted-light/20 dark:border-text-muted-dark/20 text-text-muted-light dark:text-text-muted-dark">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div class="prose max-w-none dark:prose-invert">
      <Content />
    </div>
  </article>
</BaseLayout>
