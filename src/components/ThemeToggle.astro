<button id="theme-toggle" aria-label="Toggle dark mode" class="theme-toggle">
  <!-- Sun icon (shown in dark mode) -->
  <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>
  <!-- Moon icon (shown in light mode) -->
  <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</button>

<style>
  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.5rem;
    color: var(--color-text-light);
    transition: background-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
  }

  :global(html.dark) .theme-toggle {
    color: var(--color-text-dark);
  }

  .theme-toggle:hover {
    color: var(--color-accent);
    transform: scale(1.1);
  }

  .theme-toggle:active {
    transform: scale(0.95);
  }

  .icon-sun {
    display: none;
  }

  .icon-moon {
    display: block;
  }

  :global(html.dark) .icon-sun {
    display: block;
  }

  :global(html.dark) .icon-moon {
    display: none;
  }
</style>

<script>
  document.getElementById('theme-toggle')?.addEventListener('click', () => {
    const toggle = () => {
      document.documentElement.classList.toggle('dark');
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    };

    if (document.startViewTransition) {
      document.startViewTransition(toggle);
    } else {
      toggle();
    }
  });
</script>
